        android:id="@+id/read_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewtxt_next_button"
        android:layout_below="@+id/percent"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:focusable="true"
        android:scrollbars="none"
        android:scrollingCache="false" >

        <requestFocus />
    </ListView> -->
   
<!--  -->
    <TextView
        android:id="@+id/viewtxt_main_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#00000000"
         android:layout_above="@+id/viewtxt_next_button"
        android:layout_below="@+id/percent"
        android:ems="10"
        android:scrollbars="none"
        android:singleLine="false"
     >

        <requestFocus />
    </TextView>

    <ImageButton
        android:id="@+id/fontsize_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/fontsize_big"
        android:background="#00000000"
        android:src="@drawable/zoomout" />

    <ImageButton
        android:id="@+id/fontsize_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/viewtxt_next_button"
        android:background="#00000000"
        android:src="@drawable/zoomin" />

    <Button
        android:id="@+id/viewtxt_auto_scroll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/viewtxt_pre_button"
        android:background="@drawable/arrow" />

</RelativeLayout>